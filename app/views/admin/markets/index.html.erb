<h2><%= Market.model_name.human(count: 2) %></h2>
<div class="divider"></div>
<br>
<%= link_to t('.new_market'), new_admin_market_path, class: 'btn btn-info' %>
<br>
<br>

<table class="table table-hover text-center">
  <thead class="thead-light">
    <tr>
      <th scope="col"># ID</th>
      <th scope="col"><%= Market.human_attribute_name('logo') %></th>
      <th scope="col"><%= Market.human_attribute_name('name') %></th>
      <th scope="col"><%= Market.human_attribute_name('name_en') %></th>
      <th scope="col"><%= Market.human_attribute_name('sheet_name') %></th>
      <th scope="col"><%= Market.human_attribute_name('description') %></th>
      <th scope="col"><%= Market.human_attribute_name('active') %></th>
      <th colspan="3" class="text-info"><%= t ".actions" %></th>
    </tr>
  </thead>

  <tbody>
    <% @markets.each_with_index do |market, i| %>
      <tr>
        <td scope="row"><%= market.id %></td>
        <td><%= market.logo %></td>
        <td><%= market.name %></td>
        <td><%= market.name_en %></td>
        <td><%= market.sheet_name %></td>
        <td><%= market.description %></td>
        <td>
          <% if market.active %>
            <span class="text-success"><%= t ".is_active" %></span>
          <% else %>
            <span class="text-danger"><%= t ".inactive" %></span>
          <% end %>
        </td>
        <td>
          <%= link_to url_for(admin_market_path(market)), class: 'btn btn-outline-info btn-sm' do %>
            <i class="fa fa-eye"></i>
          <% end %>
          <%= link_to url_for(edit_admin_market_path(market)), class: 'btn btn-outline-secondary btn-sm' do %>
            <i class="fa fa-edit"></i>
          <% end %>
          <%= link_to url_for(admin_market_path(market)), class: 'btn btn-outline-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fa fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>