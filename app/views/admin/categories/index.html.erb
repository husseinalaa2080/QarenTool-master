<h2><%= Category.model_name.human(count: 2) %></h2>
<div class="divider"></div>
<br>
<%= link_to t('.new_category'), new_admin_category_path, class: 'btn btn-info' %>
<br>
<br>

<table class="table table-hover text-center">
  <thead class="thead-light">
    <tr>
      <th><%= Category.human_attribute_name('icon') %></th>
      <th><%= Category.human_attribute_name('name') %></th>
      <th><%= Category.human_attribute_name('name_en') %></th>
      <th><%= Category.human_attribute_name('name_in_file') %></th>
      <th><%= Category.human_attribute_name('description') %></th>
      <th colspan="3" class="text-info"><%= t ".actions" %></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= image_tag category.icon, class: 'category-icon' if category.icon && !category.icon.empty? %></td>
        <td><%= category.name %></td>
        <td><%= category.name_en %></td>
        <td><%= category.name_in_file %></td>
        <td><%= category.description %></td>
        <td>
          <%= link_to url_for(admin_category_path(category)), class: 'btn btn-outline-info btn-sm' do %>
            <i class="fa fa-eye"></i>
          <% end %>
          <%= link_to url_for(edit_admin_category_path(category)), class: 'btn btn-outline-secondary btn-sm' do %>
            <i class="fa fa-edit"></i>
          <% end %>
          <%= link_to url_for(admin_category_path(category)), class: 'btn btn-outline-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fa fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
