<%= form_with(model: category, url: edit ? admin_category_path(category) : admin_categories_path,  local: true, class: 'two-thirds-width') do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :icon, class: 'col-md-2' %>
    <%= form.text_field :icon, class: 'form-control col' %>
  </div>

  <div class="form-group row">
    <%= form.label :name, class: 'col-md-2' %>
    <%= form.text_field :name, class: 'form-control col' %>
  </div>

  <div class="form-group row">
    <%= form.label :name_en, class: 'col-md-2' %>
    <%= form.text_field :name_en, class: 'form-control col' %>
  </div>

  <div class="form-group row">
    <%= form.label :name_in_file, class: 'col-md-2' %>
    <%= form.text_field :name_in_file, class: 'form-control col' %>
  </div>

  <div class="form-group row">
    <%= form.label :description, class: 'col-md-2' %>
    <%= form.text_area :description, class: 'form-control col' %>
  </div>

  <div class="actions form-group text-center">
    <%= form.submit class: 'btn btn-info' %>
  </div>
<% end %>
