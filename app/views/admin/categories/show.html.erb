<%= link_to url_for(admin_categories_path), class: 'text-secondary' do %>
  <i class="fa fa-2x fa-arrow-circle-<%= is_ar ? 'right' : 'left' %>"></i>
<% end %>
<br>
<br>
<div class="row align-items-center">
    <h2 class=""><%= t ".title" %></h2>
    <%= link_to url_for(edit_admin_category_path(@category)), class: 'col text-secondary' do %>
        <i class="fa fa-edit"></i>
    <% end %>
</div>
<div class="divider"></div>
<p>
  <%= image_tag @category.icon, class: 'category-icon' if @category.icon && !@category.icon.empty? %>
</p>

<p>
  <strong><%= Category.human_attribute_name("name") %>:</strong>
  <%= @category.name %>
</p>

<p>
  <strong><%= Category.human_attribute_name("name_en") %>:</strong>
  <%= @category.name_en %>
</p>

<p>
  <strong><%= Category.human_attribute_name("name_in_file") %>:</strong>
  <%= @category.name_in_file %>
</p>

<p>
  <strong><%= Category.human_attribute_name("description") %>:</strong>
  <%= @category.description %>
</p>
