<%= link_to url_for(admin_users_path), class: 'text-secondary' do %>
  <i class="fa fa-2x fa-arrow-circle-<%= is_ar ? 'right' : 'left' %>"></i>
<% end %>
<br>
<br>
<div class="row align-items-center">
    <h2 class=""><%= t ".title" %></h2>
    <%= link_to url_for(edit_admin_user_path(@user)), class: 'col text-secondary' do %>
        <i class="fa fa-edit"></i>
    <% end %>
</div>
<div class="divider"></div>
<p>
  <strong><%= User.human_attribute_name('name') %>:</strong>
  <%= @user.name %>
</p>

<p>
  <strong><%= User.human_attribute_name('mobile') %>:</strong>
  <%= @user.mobile %>
</p>

<p>
  <strong><%= User.human_attribute_name('email') %>:</strong>
  <%= @user.email %>
</p>

<div class="divider"></div>
<h3><%= link_to t(".user_orders"), admin_orders_path + "?filtering=&user_id=#{@user.id}" %></h3>
