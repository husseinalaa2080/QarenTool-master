<h2><%= User.model_name.human(count: 2) %></h2>
<div class="divider"></div>
<br>
<br>

<table class="table table-hover text-center">
  <thead class="thead-light">
    <tr>
      <th><%= User.human_attribute_name('name') %></th>
      <th><%= User.human_attribute_name('mobile') %></th>
      <th><%= User.human_attribute_name('email') %></th>
      <th><%= User.human_attribute_name('visits_count') %></th>
      <th><%= User.human_attribute_name('last_visit') %></th>
      <th><%= t('.orders_count') %></th>
      <th colspan="3" class="text-info"><%= t ".actions" %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.mobile %></td>
        <td><%= user.email %></td>
        <td><%= user.visits_count %></td>
        <td><%= format_date(user.last_visit) %></td>
        <td><%= user.orders.size %></td>
        <td>
          <%= link_to url_for(admin_user_path(user)), class: 'btn btn-outline-info btn-sm' do %>
            <i class="fa fa-eye"></i>
          <% end %>
          <%= link_to url_for(edit_admin_user_path(user)), class: 'btn btn-outline-secondary btn-sm' do %>
            <i class="fa fa-edit"></i>
          <% end %>
          <%# link_to url_for(admin_user_path(user)), class: 'btn btn-outline-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } do >
            <i class="fa fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row my-2 mx-auto pagination">
    <%= paginate @users %>
</div>